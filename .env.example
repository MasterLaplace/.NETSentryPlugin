# ============================================================================
# MySentry.Plugin Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control
# ============================================================================

# ======================
# Sentry Configuration
# ======================

# Your Sentry DSN (Data Source Name)
# Find this in: Sentry > Project Settings > Client Keys (DSN)
SENTRY_DSN=https://your-public-key@o0.ingest.sentry.io/0

# Your Sentry organization slug
# Find this in: your Sentry URL (sentry.io/organizations/{org-slug}/)
SENTRY_ORG=your-organization

# Your Sentry project slug
# Find this in: Sentry > Project Settings
SENTRY_PROJECT=mysentryapp

# Sentry auth token for CLI operations (releases, uploads)
# Create at: Sentry > Settings > Auth Tokens
# Required scopes: project:read, project:write, project:releases, org:read
SENTRY_AUTH_TOKEN=your-auth-token

# ======================
# Application Settings
# ======================

# Environment name (Development, Staging, Production)
ASPNETCORE_ENVIRONMENT=Development

# Application release/version
# This will be associated with Sentry events
SENTRY_RELEASE=1.0.0

# ======================
# Optional Settings
# ======================

# Enable debug mode for Sentry SDK (true/false)
SENTRY_DEBUG=true

# Sample rate for error events (0.0 to 1.0)
SENTRY_SAMPLE_RATE=1.0

# Sample rate for traces (0.0 to 1.0)
SENTRY_TRACES_SAMPLE_RATE=1.0

# Sample rate for profiles (0.0 to 1.0)
SENTRY_PROFILES_SAMPLE_RATE=1.0

# ======================
# CI/CD Variables
# ======================

# NuGet API key for package publishing (optional)
NUGET_API_KEY=your-nuget-api-key

# Docker registry credentials (optional)
DOCKER_REGISTRY=your-registry.azurecr.io
DOCKER_USERNAME=your-username
DOCKER_PASSWORD=your-password

# ======================
# Database (if applicable)
# ======================

# CONNECTION_STRING=Server=localhost;Database=myapp;User Id=sa;Password=your-password;
